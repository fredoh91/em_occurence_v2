{% extends 'base.html.twig' %}

{% block title %}EM OCCURENCE V2 : Traitement du reliquat{% endblock %}

{% block body %}
    <div class="container">
        <div class="container mt-4">
            <div style="background:#9F9" class="jumbotron">

                {{ form_start(form) }}
                    <div class="mx-auto" style="width: 400px;">
                        <h3 class="display-5">Saisie des info</h3>
                    </div>

                <div class="row">
                    <div class="col-md-10">{{ form_row(form.Denomination) }}</div>
                    <div class="col-md-2">{{ form_row(form.Nbr) }}</div>
                </div>
                {{ form_row(form.Categorie) }}
                {{ form_row(form.BN_Label) }}
                {{ form_row(form.Label) }}
                <div class="row justify-content-around">
                    <div class="col-md-2">{{ form_row(form.CIS) }}</div>
                    <div class="col-md-2">{{ form_row(form.ATC7) }}</div>
                </div>

                <button class="btn btn-primary float-right">Sauvegarder</button>
                {{ form_end(form) }}

            </div>

        </div>
{#     Recherche par BN LABEL       #}
        <div class="container mt-4">            
            <div style="background:silver" class="jumbotron">
                {{ form_start(formRechRomedi, {'action': path('rech_romedi',{id:form.vars.value.id}), 'method': 'GET'}) }}
                    <div class="mx-auto" style="width: 700px;">
                        <h3 class="display-6">Recherche d'un BN Label dans ROMEDI</h3>
                    </div>
                {{ form_row(formRechRomedi.idTodo, { 'value': form.vars.value.id }) }}
                {{ form_row(formRechRomedi.BN_Label) }}
                <button class="btn btn-primary float-right">Recherche du BN label</button>
                {{ form_end(formRechRomedi) }}
            </div>
        </div>
{#     Recherche par LABEL       #}            
        <div class="container mt-4">            
            <div style="background:silver" class="jumbotron">
                {{ form_start(formRechRomediParLabel, {'action': path('rech_romedi_par_label',{id:form.vars.value.id}), 'method': 'GET'}) }}

                    <div class="mx-auto" style="width: 700px;">
                        <h3 class="display-6">Recherche d'un Label dans ROMEDI</h3>
                    </div>

                {{ form_row(formRechRomediParLabel.idTodo, { 'value': form.vars.value.id }) }}
                {{ form_row(formRechRomediParLabel.Label) }}
                <button class="btn btn-primary float-right">Recherche du label</button>
                {{ form_end(formRechRomediParLabel) }}
            </div>
        </div>
    </div>
        <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
        </script>
    {#  javascript pour gérer le select sur les catégories #}
    {{ encore_entry_script_tags('modif_todo') }}
{% endblock %}
